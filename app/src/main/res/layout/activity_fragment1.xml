<LinearLayout
android:layout_height="match_parent"
android:layout_width="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:touchscreenBlocksFocus="true">

<LinearLayout
    android:id="@+id/layout_feedSearchBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:minHeight="48dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C3D1DA">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="4dp"
            android:text=" 최근 위치 및 상태"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:indeterminateTint="#FFDB7093"
        android:visibility="gone"
        android:layout_marginTop="-7dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="상태" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:src="@drawable/restart_btn"
            android:id="@+id/restart_btn"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="294dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="   데이터 이용"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/data_status"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="15dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="296dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:text="   와이파이 이용"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/wifi_status"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최근 위치"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="426dp"
            android:layout_height="225dp"
            android:scaleType="fitXY"
            android:src="@drawable/gy"
            android:id="@+id/my_address"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="화면 또는 새로고침을 눌러주세요"
            android:textColor="#000000"
            android:textSize="28dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>






</LinearLayout>






</LinearLayout>