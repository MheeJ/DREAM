<LinearLayout
android:layout_height="match_parent"
android:layout_width="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:touchscreenBlocksFocus="true">

<LinearLayout
    android:id="@+id/layout_feedSearchBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:minHeight="48dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C3D1DA">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="4dp"
            android:text=" 최근 위치 및 상태"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최근 위치"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="426dp"
            android:layout_height="225dp"
            android:scaleType="fitXY"
            android:src="@drawable/gy" />

        <TextView
            android:id="@+id/n_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="경상북도 경주시 신평동"
            android:textColor="#000000"
            android:textSize="30dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="상태" />

    <Button
        android:id="@+id/newBtn_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="새로고침" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <TextView
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="   통화 이용 "
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:text="불가능"
            android:layout_gravity="center_vertical"
            android:textColor="#FF0000"
            android:textSize="30dp" />

    </LinearLayout>

    <TextView
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="   데이터 이용"
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/data_status"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="30dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="   와이파이 이용"
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/wifi_status"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="30dp" />

    </LinearLayout>






</LinearLayout>






</LinearLayout>